<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      h1 {
        color: #333;
      }
      .card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 20px;
        margin-bottom: 20px;
      }
      button {
        background-color: #007BFF;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
      }
      input, select {
        padding: 10px;
        margin: 5px 0;
        border: 1px solid #ccc;
        border-radius: 5px;

      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>
      Welcome to the Image Processing API. Use the /images endpoint to access
      the image processing features.
    </p>
    <%- body %>
     <div class="card">
      <h2>Manage Thumbnails</h2>
      <button id="deleteThumbsBtn" style="background-color: red; margin-top: 10px;">
        Delete All Thumbnails
      </button>
    </div>
    <script>
      const deleteBtn = document.getElementById('deleteThumbsBtn');

      deleteBtn.addEventListener('click', async () => {
       try {
          const response = await fetch('/images/deleteThumb', { method: 'DELETE' });
          const result = await response.json();

          if (response.ok) {
            alert(result.message);
            // Reload page to reflect changes
            location.reload();
          } else {
            alert('Error: ' + result.message);
          }
        } catch (err) {
          alert('Error: ' + err.message);
        }

        
      });
    </script>
  </body>
</html>
